def solicitar_datos():
    ventas = []
    ganancias = []
    for i in range(6):
        print(f"Mes {i+1}:")
        venta = float(input(f"Ingrese las ventas del mes {i+1}/6: "))
        ganancia = float(input(f"Ingrese las ganancias del mes {i+1}/6 en soles: "))
        ventas.append(venta)
        ganancias.append(ganancia)
    return ventas, ganancias

def calcular_coeficientes(x, y):
    n = len(x)
    sum_x = sum(x)
    sum_y = sum(y)
    sum_xy = sum(xi * yi for xi, yi in zip(x, y))
    sum_x2 = sum(xi * xi for xi in x)
    
    m = (n * sum_xy - sum_x * sum_y) / (n * sum_x2 - sum_x * sum_x)
    b = (sum_y - m * sum_x) / n
    return m, b

def predecir(m, b, x):
    return m * x + b

ventas, ganancias = solicitar_datos()

meses = list(range(1, 7))

m_ventas, b_ventas = calcular_coeficientes(meses, ventas)

m_ganancias, b_ganancias = calcular_coeficientes(meses, ganancias)

ventas_futuras = []
ganancias_futuras = []
for i in range(7, 9):
    venta_futura = predecir(m_ventas, b_ventas, i)
    ganancia_futura = predecir(m_ganancias, b_ganancias, i)
    ventas_futuras.append(venta_futura)
    ganancias_futuras.append(ganancia_futura)

for i in range(2):
    print(f"PredicciÃ³n para el mes {7+i}:")
    print(f"  Ventas: {ventas_futuras[i]:.2f}")
    print(f"  Ganancias: {ganancias_futuras[i]:.2f} soles")
